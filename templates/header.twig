 <header class="header header-light">
  <div class="container-fluid container-lg d-flex justify-content-center">
    <div class="navbar-brand flex-grow-1">
      {% include 'partial/logo.twig' %}
    </div>

    <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
      <img class="icon" src="{{ site.theme.link }}/assets/img/bars.svg">
    </button>
  </div>

  <nav class="navbar navbar-expand-lg d-none d-lg-block">
    <div class="container justify-content-between">
      <ul class="navbar-nav">
        {% for item in main_navigation.items %}
            <li class="nav-item {{ item.classes|join(' ') }}">
                <a class="nav-link" href="{{ item.link }}">{{ item.title }}</a>
                {% if item.children %}
                    <ul class="nav-drop">
                        {% for child in item.children %}
                            <li class="nav-drop-item">
                                <a href="{{ child.link }}">{{ child.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </li>
        {% endfor %}
      </ul>

      <ul class="navbar-nav icons">
        <li class="nav-item">
          <a class="nav-link" href="#">
            <img class="icon" src="{{ site.theme.link }}/assets/img/youtube.svg">
          </a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="#">
            <img class="icon" src="{{ site.theme.link }}/assets/img/instagram.svg">
          </a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="#">
            <img class="icon" src="{{ site.theme.link }}/assets/img/envelope-regular.svg">
          </a>
        </li>
      </ul>
    </div>
  </nav>

  {% include 'partial/header-mobile.twig' %}
  
</header>
