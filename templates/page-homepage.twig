{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<div class="featured-container">

		<div class="overlay light-overlay"></div>
		{% if post.thumbnail.src %}
			{# <div class="measure"></div> #}

			<div class="featured" style="--bg-image: url({{ post.thumbnail.src }});"></div>
		{% else %}
			<video autoplay muted loop id="myVideo">
				<source src="{{ site.theme.link }}/assets/img/curated-video.mp4" type="video/mp4">
			</video>
		{% endif %}
		</div>

		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">

				{% include 'partial/section-heading.twig' with { title: 'NEW & NOW', subtitle: 'HIGHLIGHTS' } %}

				<div id="newAndNowCarousel" class="carousel slide" data-bs-ride="carousel">
					<div class="carousel-indicators">
						{% for key,post in highlights %}
								<button type="button" data-bs-target="#newAndNowCarousel" data-bs-slide-to="{{key}}" class="{% if key == 0  %} {{ 'active' }} {% endif %}" aria-current="{% if key == 0  %} {{ 'current' }} {% endif %}" aria-label="Slide {{key}}"></button>
						{% endfor %}
					</div>

					<div class="carousel-inner">
						{% set ctr = 0 %}
						{% for key,post in highlights %}
							<div class="carousel-item {% if key == 0  %} {{ 'active' }} {% endif %}">
								<div class="bg-left" style="--bg-image: url({{ post.thumbnail.src }});"></div>

								{% if post.meta('blog-bg') %}
									<div class="bg-right" style="--bg-image-right: url('{{ post.meta("blog-bg") }}');"></div>
								{% else %}
									<div class="bg-right" style="--bg-image-right: url('{{ site.theme.link }}/assets/img/lambo-2-left.jpeg');"></div>
								{% endif %}

								<div class="overlay">
									<div class="overlay-content">
										<h2 class="handwritten">2010</h2>
										<h2>{{ post.title }}</h2>

										<p><span>Year:</span> {{ post.meta('year') ? post.meta('year') : "#NA" }}</p>
										<p><span>Manufacturer:</span> {{ post.meta('manufacturer') ? post.meta('manufacturer') : "#NA" }}</p>
										<p><span>Model:</span> {{ post.meta('model') ? post.meta('model') : "#NA" }}</p>
										<p><span>Model Variant:</span>{{ post.meta('model_variant') ? post.meta('model_variant') : "#NA" }}</p>
										<p><span>Exterior Color:</span>{{ post.meta('exterior_color') ? post.meta('exterior_color') : "#NA" }}</p>
										<p><span>Current Mileage:</span>{{ post.meta('current_mileage') ? post.meta('current_mileage') : "#NA" }}</p>
										<p><span>Chassis:</span>{{ post.meta('chassis') ? post.meta('chassis') : "#NA" }}</p>
										<p><span>Engine:</span>{{ post.meta('engine') ? post.meta('engine') : "#NA" }}</p>

										<a href="{{ post.link }}">
											<button type="button" class="btn btn-primary btn-sm">READ MORE</button>
										</a>
									</div>

									<div class="overlay-background">
									</div>
								</div>
							</div>
						{% endfor %}
					</div>

					<button class="carousel-control-prev" type="button" data-bs-target="#newAndNowCarousel" data-bs-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Previous</span>
					</button>
					<button class="carousel-control-next" type="button" data-bs-target="#newAndNowCarousel" data-bs-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Next</span>
					</button>
				</div>

				{% include 'partial/section-heading.twig' with { title: 'LATEST ARRIVALS', subtitle: 'INVENTORY' } %}

				<div class="row px-3 text-end">
					<a class="more-link" href="{{ site.link }}/inventory">
						MORE
						<span>
							&raquo;
						</span>
					</a>
				</div>

				{% include 'partial/multi-carousel.twig' with { posts: latest, title: 'latest' } %}

				{% include 'partial/section-heading.twig' with { title: 'FIRST LOOK', subtitle: 'CURATED' } %}

				<div class="carousel-section">
					<img src="{{ site.theme.link }}/assets/img/tape-3.png" class="carousel-tape-horizontal">
					<div id="firstLookCarousel" class="carousel slide" data-bs-ride="carousel">
						<div class="carousel-indicators">
							{% for key,post in curated %}
								<button type="button" data-bs-target="#firstLookCarousel" data-bs-slide-to="{{key}}" class="active" aria-current="true" aria-label="Slide {{ key }}"></button>
							{% endfor %}
						</div>

						<div class="carousel-inner">
							{% set ctr = 0 %}
							{% for key,post in curated %}
								<div class="carousel-item {% if key == 0  %} {{ 'active' }} {% endif %}">
									<div class="bg-left" style="--bg-image: url({{ post.thumbnail.src }});"></div>

									{% if post.meta('blog-bg') %}
										<div class="bg-right" style="--bg-image-right: url('{{ post.meta("blog-bg") }}');"></div>
									{% else %}
										<div class="bg-right" style="--bg-image-right: url('{{ site.theme.link }}/assets/img/lambo-2-left.jpeg');"></div>
									{% endif %}

									<div class="overlay">
										<div class="overlay-content">
											<h2 class="grafiti">IN THE WORKS</h2>
											<h2>& COMING SOON</h2>

											<p>{{ post.preview.length(100).read_more(false) }}</p>

											<a href="{{ post.link }}">
												<button type="button" class="btn btn-primary btn-sm">READ MORE</button>
											</a>
										</div>

										<div class="overlay-background">
										</div>

										<img src="{{ site.theme.link }}/assets/img/tape-2.png" class="carousel-tape-vertical">
									</div>
								</div>
							{% endfor %}
						</div>
						<button class="carousel-control-prev" type="button" data-bs-target="#firstLookCarousel" data-bs-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>

							<span class="visually-hidden">Previous</span>
						</button>
						<button class="carousel-control-next" type="button" data-bs-target="#firstLookCarousel" data-bs-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>

							<span class="visually-hidden">Next</span>
						</button>
					</div>
				</div>

				{% include 'partial/section-heading.twig' with { title: 'THE JOURNAL', subtitle: 'GET UP TO SPEED' } %}

				<div class="row px-3 text-end">
					<a class="more-link" href="{{ site.link }}/stories">
						MORE
						<span>
							&raquo;
						</span>
					</a>
				</div>

				{% include 'partial/multi-carousel.twig' with { posts: journal, title: 'journal' } %}

				{% include 'partial/section-heading.twig' with { title: 'OUR CHANNEL', subtitle: 'YOUTUBE' } %}

				<div class="row youtube-container">
					<iframe width="420" height="650" src="https://www.youtube.com/embed/rI83PMNvljw">
					</iframe>

					<div class="youtube-overlay"></div>
					
					<div class="youtube-title">
						<img src="{{ site.theme.link }}/assets/img/youtube-label.png"/>
						<h2>WE BROKE</br> STRADMAN'S</br> LAMBORGHINI</h2>
					</div>
				</div>

				<div class="article-body">
					{{post.content}}
				</div>

				{{ wp.do_shortcode('[instagram feed="123"]') }}
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
