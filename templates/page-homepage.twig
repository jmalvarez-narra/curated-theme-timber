{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		{% if post.thumbnail.src %}
			<div class="featured-container">
				<div class="featured" style="--bg-image: url({{ post.thumbnail.src }});"></div>
			</div>
		{% endif %}

		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<div class="section-heading py-3 mt-5 mb-3">
					<h3 class="title">NEW & NOW</h3>

					<h5 class="subtitle mb-0">HIGHLIGHTS</h5>
				</div>

				<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
					<div class="carousel-indicators">
						{% for key,post in highlights %}
							<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="{{key}}" class="active" aria-current="true" aria-label="Slide {{ key }}"></button>
						{% endfor %}
					</div>
					<div class="carousel-inner">
						{% set ctr = 0 %}
						{% for key,post in highlights %}
							<div class="carousel-item {% if key == 0  %} {{ 'active' }} {% endif %}">
								<div class="bg-left" style="--bg-image: url({{ post.thumbnail.src }});"></div>

								<div class="bg-right" style="--bg-image-right: url('{{ site.theme.link }}/assets/img/lambo-2-left.jpeg');"></div>

								<div class="overlay">
									<div class="overlay-content">
										<h2>{{ post.title }}</h2>

										<p>Year: <span>2010</span></p>
										<p>Manufacturer: <span>Lamborghini</span></p>
										<p>Model: <span>MURCIELAGO</span></p>
										<p>Model Variant: <span>LP670-4 SuperVeloce</span></p>
										<p>Exterior Color: <span>Nero Aldebaran</span></p>
										<p>Current Mileage: <span>610 miles</span></p>
										<p>Chassis: <span>#ZHWBU8AH0ALA03832</span></p>
										<p>Engine: <span>#NA</span></p>

										<a href="{{ post.link }}">
											<button type="button" class="btn btn-primary btn-sm">READ MORE</button>
										</a>
									</div>

									<div class="overlay-background">
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
					<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>

						<span class="visually-hidden">Previous</span>
					</button>
					<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>

						<span class="visually-hidden">Next</span>
					</button>
				</div>

				<div class="section-heading py-3 mt-5 mb-3">
					<h3 class="title">LATEST ARRIVALS</h3>

					<h5 class="subtitle mb-0">INVENTORY</h5>
				</div>

				<div class="row mx-auto my-auto justify-content-center">
					<div id="multiCarousel" class="multi-carousel multi-carousel-latest carousel slide" data-bs-ride="carousel">
						<div class="carousel-inner" role="listbox">
							{% set ctr = 0 %}
							{% for key,post in latest %}
								<div class="row gx-2 carousel-item {% if key == 0  %} {{ 'active' }} {% endif %}">
									<div class="col-md-3">
										<a href="{{ post.link }}">
											<div class="card border-0">
												<img src="{{ post.thumbnail.src }}" class="card-img-top img-fluid card-img-fit" alt="...">

												<div class="card-body">
													<h5 class="card-title mb-0">{{ post.title }}</h5>
												</div>
											</div>
										</a>
									</div>
								</div>
							{% endfor %}
						</div>

						<a class="carousel-control-prev bg-transparent w-aut" href="#multiCarousel" role="button" data-bs-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						</a>

						<a class="carousel-control-next bg-transparent w-aut" href="#multiCarousel" role="button" data-bs-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
						</a>
					</div>
				</div>

				<div class="section-heading py-3 mt-5 mb-3">
					<h3 class="title">FIRST LOOK</h3>

					<h5 class="subtitle mb-0">CURATED</h5>
				</div>

				<div id="carouselExampleIndicators2" class="carousel slide" data-bs-ride="carousel">
					<div class="carousel-indicators">
						{% for key,post in curated %}
							<button type="button" data-bs-target="#carouselExampleIndicators2" data-bs-slide-to="{{key}}" class="active" aria-current="true" aria-label="Slide {{ key }}"></button>
						{% endfor %}
					</div>
					<div class="carousel-inner">
						{% set ctr = 0 %}
						{% for key,post in curated %}
							<div class="carousel-item {% if key == 0  %} {{ 'active' }} {% endif %}">
								<div class="bg-left" style="--bg-image: url({{ post.thumbnail.src }});"></div>

								<div class="bg-right" style="--bg-image-right: url('{{ site.theme.link }}/assets/img/lambo-2-left.jpeg');"></div>

								<div class="overlay">
									<div class="overlay-content">
										<h2>{{ post.title }}</h2>

										<p>Year: <span>2010</span></p>
										<p>Manufacturer: <span>Lamborghini</span></p>
										<p>Model: <span>MURCIELAGO</span></p>
										<p>Model Variant: <span>LP670-4 SuperVeloce</span></p>
										<p>Exterior Color: <span>Nero Aldebaran</span></p>
										<p>Current Mileage: <span>610 miles</span></p>
										<p>Chassis: <span>#ZHWBU8AH0ALA03832</span></p>
										<p>Engine: <span>#NA</span></p>

										<a href="{{ post.link }}">
											<button type="button" class="btn btn-primary btn-sm">READ MORE</button>
										</a>
									</div>

									<div class="overlay-background">
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
					<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators2" data-bs-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>

						<span class="visually-hidden">Previous</span>
					</button>
					<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators2" data-bs-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>

						<span class="visually-hidden">Next</span>
					</button>
				</div>

				<div class="section-heading py-3 mt-5 mb-3">
					<h3 class="title">THE JOURNAL</h3>

					<h5 class="subtitle mb-0">GET UP TO SPEED</h5>
				</div>

				<div class="row mx-auto my-auto justify-content-center">
					<div id="multiCarousel2" class="multi-carousel multi-carousel-journal carousel slide" data-bs-ride="carousel">
						<div class="carousel-inner" role="listbox">
							{% set ctr = 0 %}
							{% set placeholder = site.theme.link ~ '/assets/img/placeholder.jpeg' %}
							{% for key,post in journal %}
								<div class="row gx-2 carousel-item {% if key == 0  %} {{ 'active' }} {% endif %}">
									<div class="col-md-3">
										<a href="{{ post.link }}">
											<div class="card border-0">
												<img src="{{ post.thumbnail.src|default(placeholder) }}" alt="{{ post.title }}" class="card-img-top img-fluid card-img-fit" alt="...">

												<div class="card-body">
													<h5 class="card-title mb-0">{{ post.title }}</h5>
												</div>
											</div>
										</a>
									</div>
								</div>
							{% endfor %}
						</div>

						<a class="carousel-control-prev bg-transparent w-aut" href="#multiCarousel2" role="button" data-bs-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						</a>

						<a class="carousel-control-next bg-transparent w-aut" href="#multiCarousel2" role="button" data-bs-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
						</a>
					</div>
				</div>

				<div class="article-body">
					{{post.content}}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
