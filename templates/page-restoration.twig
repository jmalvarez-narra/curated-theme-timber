
{% extends "base.twig" %}
{% set headerClass = "header-light" %}

{% if post.thumbnail.src is empty %}
  {% set headerClass = "position-relative" %}
{% endif %}

{% block content %}
  <div class="featured-container">
    {% if post.thumbnail.src %}
      <div class="featured" style="--bg-image: url({{ post.thumbnail.src }});"></div>
    {% else %}
      <div class="featured" style="--bg-image: url({{ site.theme.link }}/assets/img/placeholder.jpeg);"></div>
    {% endif %}

    <a href="{{ post.link }}">
      <button type="button" class="btn btn-inquire btn-light btn-sm">INQUIRE</button>
    </a>
  </div>

	<div class="inner-wrapper">

		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
        {% include 'partial/section-heading.twig' with { title: post.title } %}
				
				<div class="article-body">
					{{post.content}}
				</div>
			</section>
		</article>

    {% include 'partial/section-heading.twig' with { title: 'FROM THE SHOP FLOOR' } %}

    {% if post.meta('from_the_shop_floor_image')  %}
      <img src="{{ post.meta('from_the_shop_floor_image') }}">
      {# <div class="featured" style="--bg-image: url({{  }});"></div> #}
    {% else %}
      <img class="shop-floor-image" src="{{ site.theme.link }}/assets/img/Restoration_Main_Image.png">
      {# <div class="featured" style="--bg-image: url('{{ site.theme.link }}/assets/img/Restoration_Main_Image.png');"></div> #}
    {% endif %}

    {% include 'partial/section-heading.twig' with { title: '@WEARECURATED', subtitle: 'INSTAGRAM' } %}
	</div><!-- /content-wrapper -->
{% endblock %}