
{% extends "base.twig" %}
{% set headerClass = "header-light" %}

{% if post.thumbnail.src is empty %}
  {% set headerClass = "position-relative" %}
{% endif %}

{% block content %}
  {% if post.thumbnail.src %}
    <div class="featured-container">
      <div class="featured" style="--bg-image: url({{ post.thumbnail.src }});"></div>
    </div>
  {% else %}
    <div class="featured-container">
      <div class="featured" style="--bg-image: url({{ site.theme.link }}/assets/img/placeholder.jpeg);"></div>
    </div>
  {% endif %}

	<div class="content-wrapper">

		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<div class="section-heading">
					<h3 class="title">{{post.title}}</h3>
				</div>
				
				<div class="article-body">
					{{post.content}}
				</div>
			</section>
		</article>

    <div class="section-heading">
      <h3 class="title">FROM THE SHOP FLOOR</h3>
    </div>

    <div class="container pb-5">
      {% if post.meta('blog-bg')  %}
        <div class="featured" style="--bg-image: url({{ post.meta('blog-bg') }});"></div>
      {% else %}
        <div class="featured" style="--bg-image: url('{{ site.theme.link }}/assets/img/lambo-2-right.jpeg');"></div>
      {% endif %}
    </div>
	</div><!-- /content-wrapper -->
{% endblock %}