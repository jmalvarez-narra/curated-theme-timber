
{% extends "base.twig" %}
{% set headerClass = "header-light" %}

{# {% if post.thumbnail.src is empty %}
  {% set headerClass = "position-relative" %}
{% endif %} #}

{% block content %}
	<div class="content-wrapper">
		{% include 'partial/featured-header.twig' with { hideInquiry: true } %}

		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<div class="section-heading">
					<h3 class="title">{{post.title}}</h3>
				</div>

				<div class="article-body">
					{{post.content}}
				</div>

				{% if post.meta('additional_sections') %}
					{% for key,section in post.meta('additional_sections') %}
						<div class="section-heading">
							<h3 class="title">{{section.subsection_title}}</h3>
							<h5 class="subtitle mb-0">{{section.subsection_subtitle}}</h5>
						</div>

						<div class="article-body">
							{{section.subsection_content}}
						</div>
					{% endfor %}
				{% endif %}
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
