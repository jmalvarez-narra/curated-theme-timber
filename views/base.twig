{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
		<!-- Google Tag Manager (noscript) -->
		<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TNSJTJ8"
			height="0" width="0" style="display:none; visibility:hidden"></iframe></noscript>
	<!-- End Google Tag Manager (noscript) -->
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		<div class="flex-wrapper" style="position: relative;">
			{% block header %}
				<header class="header {{ post.meta('header_theme') }}">
					{% include 'header.twig' with { post: post } %}
				</header>
			{% endblock %}

			<section id="content" role="main" class="content-wrapper">
				{# {% if title %}<h1 class="invisible">{{title}}</h1>{% endif %} #}
				<div class="wrapper {{sidebar_class}}">
					{% block content %}
						Sorry, no content
					{% endblock %}
				</div>
				{% if sidebar %}
					<aside class="layout-sidebar">
						{{sidebar}}
					</aside>
				{% endif %}
			</section>

			<!-- Inquiry Modal -->
			{% include 'partial/inquiry-modal.twig' %}
			{% include 'partial/inquiry-success-modal.twig' %}

			{# Newsletter Modal #}
			{{ function('do_shortcode', '[ninja-popup ID=2469]') }}

			{% block footer %}
				<footer id="footer">
					{% include 'footer.twig' %}
				</footer>
				{{ function('wp_footer') }}
			{% endblock %}
		</div>
	</body>
</html>
