
{% extends "base.twig" %}
{% set headerClass = "header-light" %}

{# {% if post.thumbnail.src is empty %}
  {% set headerClass = "position-relative" %}
{% endif %} #}

{% block content %}
  {% include 'partial/featured-header.twig'  with { hideInquiry: true } %}

	<div class="content-wrapper first-look-wrapper">
		<div class="section-heading">
      <h3 class="title">FIRST LOOK</h3>
    </div>

    <div class="carousel-section first-look-carousel first-look-feature-v3 mb-5">
      <div id="mainCarousel" class="single-carousel carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          {% if post.meta('template') == 'a' %}
            <div class="carousel-item carousel-item-1 h-100 active">
              <div class="row h-100 m-0">
                {% if post.meta('left_image') %}
                  <div class="d-none d-lg-block col-6 bg-image bg-image-left" style="--bg-image: url({{ post.meta('left_image') }});">
                {% else %}
                  <div class="d-none d-lg-block col-6 bg-image bg-image-left" style="--bg-image: url({{ site.theme.link ~ '/assets/img/first-look-left-a.png' }});">
                {% endif %}  
                  <div class="tape-1"></div>
                  <div class="tape-2"></div>
                  <div class="polaroid">
                    {% if post.meta('polaroid') %}
                      <img height="250" src="{{ post.meta('polaroid') }}}" />
                    {% else %}
                      <img height="250" src="https://images.unsplash.com/photo-1462396881884-de2c07cb95ed" />
                    {% endif %}
                  </div>
                </div>

                <div class="col-12 col-lg-6">
                  <div class="row h-100">
                    <div class="col-12 col-lg-10 first-look-content">
                      <h2 class="grafiti">{{ post.title ? post.title : 'IN THE WORKS' }}</h2>
                      <!-- <h2 class="content-title">{{ post.meta('subtitle') }}</h2> -->

                      <div class="pt-1 pb-4">
                        <p>
                          {{ post.preview.length(120).read_more(false).end('').strip(false) }}
                        </p>
                      </div>

                      {# <a href="{{ post.link }}">
                        <button type="button" class="btn btn-primary btn-sm">READ MORE</button>
                      </a> #}
                    </div>

                    {% if post.meta('right_image') %}
                      <div class="d-none d-lg-block col-2 bg-image  bg-image-right" style="--bg-image: url({{ post.meta('right_image') }});">
                    {% else %}
                      <div class="d-none d-lg-block col-2 bg-image  bg-image-right" style="--bg-image: url({{ site.theme.link }}/assets/img/first-look-right-a.png);">
                    {% endif %}
                      <div class="tape-1"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {% elseif post.meta('template') == 'b' %}
            <div class="carousel-item carousel-item-2 h-100 active">
              <div class="row h-100 m-0">
                <div class="col-12 col-lg-6">
                  <div class="row h-100">
                    {% if post.meta('left_image') %}
                      <div class="d-none d-lg-block col-2 bg-image bg-image-left" style="--bg-image: url({{ post.meta('left_image') }});">
                    {% else %}
                      <div class="d-none d-lg-block col-2 bg-image bg-image-left" style="--bg-image: url({{ site.theme.link }}/assets/img/first-look-left-b.png);">
                    {% endif %}
                      <div class="tape-1"></div>
                    </div>

                    <div class="col-12 col-lg-10 first-look-content">
                      <h2 class="grafiti">{{ post.title ? post.title : 'IN THE WORKS' }}</h2>


                      <div class="pt-1 pb-4">
                        <p>
                          {{ post.preview.length(120).read_more(false).end('').strip(false) }}
                        </p>
                      </div>

                      {# <a href="{{ post.link }}">
                        <button type="button" class="btn btn-primary btn-sm">READ MORE</button>
                      </a> #}
                    </div>
                  </div>
                </div>

                {% if post.meta('right_image') %}
                  <div class="d-none d-lg-block col-6 bg-image bg-image-right" style="--bg-image: url({{ post.meta('right_image') }});">
                {% else %}
                  <div class="d-none d-lg-block col-6 bg-image bg-image-right" style="--bg-image: url({{ site.theme.link }}/assets/img/first-look-right-b.png);">
                {% endif %}
                  <div class="tape-1"></div>
                  <div class="tape-2"></div>
                  <div class="polaroid">
                    {% if post.meta('polaroid') %}
                      <img height="250" src="{{ post.meta('polaroid') }}}" />
                    {% else %}
                      <img height="250" src="https://images.unsplash.com/photo-1462396881884-de2c07cb95ed" />
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          {% elseif post.meta('template') == 'c' %}
            <div class="carousel-item carousel-item-3 h-100 active">
              <div class="row h-100 m-0">
                {% if post.meta('left_image') %}
                  <div class="d-none d-lg-block col-6 bg-image bg-image-left" style="--bg-image: url({{ post.meta('left_image') }});">
                {% else %}
                  <div class="d-none d-lg-block col-6 bg-image bg-image-left" style="--bg-image: url({{ site.theme.link }}/assets/img/first-look-right-c.png);">
                {% endif %}
                  <div class="tape-1"></div>
                  <div class="polaroid">
                    {% if post.meta('polaroid') %}
                      <img height="250" src="{{ post.meta('polaroid') }}}" />
                    {% else %}
                      <img height="250" src="https://images.unsplash.com/photo-1462396881884-de2c07cb95ed" />
                    {% endif %}
                  </div>
                </div>

                <div class="col-12 col-lg-6">
                  <div class="row h-100">
                    <div class="col-12 col-lg-10 first-look-content">
                      <h2 class="grafiti">{{ post.title ? post.title : 'IN THE WORKS' }}</h2>


                      <div class="pt-1 pb-4">
                        <p>
                          {{ post.preview.length(120).read_more(false).end('').strip(false) }}
                        </p>
                      </div>

                      {# <a href="{{ post.link }}">
                        <button type="button" class="btn btn-primary btn-sm">READ MORE</button>
                      </a> #}
                    </div>

                    {% if post.meta('right_image') %}
                      <div class="d-none d-lg-block col-2 bg-image bg-image-right" style="--bg-image: url({{ post.meta('right_image') }});">
                    {% else %}
                      <div class="d-none d-lg-block col-2 bg-image bg-image-right" style="--bg-image: url({{ site.theme.link }}/assets/img/first-look-left-c.png);">
                    {% endif %}
                      <div class="tape-1"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {% endif %}
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>

    <div class="section-heading">
      <h3 class="title">MORE FIRST LOOKS</h3>
    </div>

    {% include 'partial/multi-carousel.twig' with { posts: curated, title: 'curated' } %}
	</div><!-- /content-wrapper -->
{% endblock %}